{
    "compilerOptions": {
      "rootDirs": ["src"],
      "outDir": "./dist",
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "types": ["node"],
      "allowJs": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "baseUrl": "."
    },
    "include": ["src/**/*"]
  }